{
    "compilerOptions": {
        // Após compilado ele ira transformar em EcmaScript 6.
        "target": "es6",
        // Pasta alvo para colocar o conteúdo transformado em JavaScript.
        "outDir": "pos-compilar/js",
        //Impedi a transformação em javascript caso exista erro de compilação.
        "noEmitOnError": true,
        //Não vai definir as variáveis como any
        "noImplicitAny": true,
        //Remove os comentários dos arquivos javascript finais.
        "removeComments": true,
        //Configuração para trabalhar com sistema de módulos do EcmaScript6 (ES2015).
        "module": "system",
        //Use true para não permitir parâmetros null / undefined.
        "strictNullChecks": false
    },
    "include": [
        // Origem dos códigos que serão transformados em JavaScript.
        "ts/**/*"
    ]
}